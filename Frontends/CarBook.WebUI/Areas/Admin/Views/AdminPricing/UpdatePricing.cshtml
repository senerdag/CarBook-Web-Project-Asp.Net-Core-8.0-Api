@model UpdatePricingDto

@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Create New Pricing</h4>
                        <p class="card-subtitle mb-4">**Fill the all blanks**</p>

                        <form method="post">
                            <input type="hidden" asp-for="PricingId" />
                            <div class="form-group">
                                <label for="exampleInputName">Pricing Name</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Name">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Update Pricing</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

