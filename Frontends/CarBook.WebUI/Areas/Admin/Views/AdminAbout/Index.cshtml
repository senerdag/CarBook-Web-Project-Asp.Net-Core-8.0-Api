@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">About List</h4>
                        <p class="card-subtitle mb-4">
                            Create, Delete, Update, Search and for List
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Image Url</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.title</td>
                                            <td>@item.description</td>
                                            <td>@item.imageUrl</td>
                                            <td><a href="/Admin/AdminAbout/DeleteAbout/@item.aboutId" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminAbout/UpdateAbout/@item.aboutId" class="btn btn-outline-success">Update</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Create New About</a>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div> <!-- container-fluid -->
</div>

