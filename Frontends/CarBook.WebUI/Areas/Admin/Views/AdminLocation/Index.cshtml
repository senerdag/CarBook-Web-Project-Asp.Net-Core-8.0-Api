@model List<ResultLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Location List</h4>
                        <p class="card-subtitle mb-4">
                            (Including location information on home page)
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Location</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Open Location</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.Name</td> 
                                            <td><a href="/Admin/AdminLocation/DeleteLocation/@item.LocationId" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-dark">Open Location</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Create New Location</a>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div> <!-- container-fluid -->
</div>
