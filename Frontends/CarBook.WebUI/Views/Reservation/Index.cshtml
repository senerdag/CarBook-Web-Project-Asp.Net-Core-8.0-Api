
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayoutController1/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form  class="bg-light p-5 contact-form">
        <div class="form-group">
            <input type="text" class="form-control" readonly placeholder="The car you want to buy.">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Surname">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Email">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Phone">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Pick-up Location">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Drop-off Location">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Age">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="How much year do you have your license">
        </div>
        <div class="form-group">
            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="If there is anything you would like to add"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Complete The Reservation" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

