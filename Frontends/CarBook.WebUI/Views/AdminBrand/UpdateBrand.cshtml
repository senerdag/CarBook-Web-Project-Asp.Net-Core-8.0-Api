@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Brand</h4>
                        <p class="card-subtitle mb-4">**Fill the all blanks**</p>

                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="BrandId" />
                                <label for="exampleInputBrand">Brand Name</label>
                                <input type="text" class="form-control" id="exampleInputBrand" asp-for="Name" placeholder="Brand Name">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Brand</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>  
