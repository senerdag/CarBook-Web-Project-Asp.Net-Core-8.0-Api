@model List<ResulAllBlogsWithAuthorDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayoutController1/Index.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach(var item in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a href="blog-single.html" class="block-20 img" style="background-image: url('@item.CoverImageUrl');">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.CreatedDate.ToShortDateString()</a></div>
                                <div><a href="#">@item.AuthorName</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@item.Title</a></h3>
                            <p>@item.Description</p>
                            <p><a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-primary">Continue <span class="icon-long-arrow-right"></span></a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
